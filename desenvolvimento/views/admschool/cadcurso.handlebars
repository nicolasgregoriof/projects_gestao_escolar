<div class="auth-container">
    <h2>Cadastro de novo curso</h2>
    <form action="/admschool/cadcurso" method="POST">
        <div class="form-control">
            <label for="nomecurso">Nome do curso:</label>
            <input type="text" name="nomecurso" placeholder="Digite o nome do curso" required>
        </div>
        <div class="form-control">
            <label for="qtdesemestres">Quantidade de semestres:</label>
            <input type="number" name="qtdesemestres" placeholder="Digite a quantidade de semestres" required>
        </div>
        <input type="submit" value="Cadastrar">
    </form>
</div>